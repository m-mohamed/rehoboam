{
  "hooks": {
    "SessionStart": [{
      "matcher": "*",
      "hooks": [{ "type": "command", "command": "WEZTERM_PANE=$WEZTERM_PANE ~/.local/bin/rehoboam hook", "timeout": 5 }]
    }],
    "UserPromptSubmit": [{
      "matcher": "",
      "hooks": [{ "type": "command", "command": "WEZTERM_PANE=$WEZTERM_PANE ~/.local/bin/rehoboam hook", "timeout": 5 }]
    }],
    "PermissionRequest": [{
      "matcher": "",
      "hooks": [{ "type": "command", "command": "WEZTERM_PANE=$WEZTERM_PANE ~/.local/bin/rehoboam hook -N", "timeout": 10 }]
    }],
    "Stop": [{
      "matcher": "",
      "hooks": [{ "type": "command", "command": "WEZTERM_PANE=$WEZTERM_PANE ~/.local/bin/rehoboam hook -N", "timeout": 10 }]
    }],
    "Notification": [{
      "matcher": "",
      "hooks": [{ "type": "command", "command": "WEZTERM_PANE=$WEZTERM_PANE ~/.local/bin/rehoboam hook -N", "timeout": 5 }]
    }],
    "PreToolUse": [{
      "matcher": "",
      "hooks": [{ "type": "command", "command": "WEZTERM_PANE=$WEZTERM_PANE ~/.local/bin/rehoboam hook", "timeout": 10 }]
    }],
    "PostToolUse": [{
      "matcher": "",
      "hooks": [{ "type": "command", "command": "WEZTERM_PANE=$WEZTERM_PANE ~/.local/bin/rehoboam hook", "timeout": 10 }]
    }],
    "SessionEnd": [{
      "matcher": "*",
      "hooks": [{ "type": "command", "command": "WEZTERM_PANE=$WEZTERM_PANE ~/.local/bin/rehoboam hook", "timeout": 5 }]
    }],
    "PreCompact": [{
      "matcher": "*",
      "hooks": [{ "type": "command", "command": "WEZTERM_PANE=$WEZTERM_PANE ~/.local/bin/rehoboam hook", "timeout": 10 }]
    }],
    "SubagentStop": [{
      "matcher": "*",
      "hooks": [{ "type": "command", "command": "WEZTERM_PANE=$WEZTERM_PANE ~/.local/bin/rehoboam hook", "timeout": 5 }]
    }]
  }
}
